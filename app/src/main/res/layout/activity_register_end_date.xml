<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/register_end_asset_asset_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumsquareotfb"
            android:text="전역일 등록"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/register_end_date_asset_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="@font/nanumsquareotfb"
            android:text="취소"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/register_end_date_asset_complete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="@font/nanumsquareotfb"
            android:text="등록"
            android:textColor="@android:color/white"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/register_end_date_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_end_date_asset_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareotfb"
            android:gravity="center_vertical|center_horizontal"
            android:text="NAME HERE"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/register_end_date_asset_input_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_color_primary_light_dark"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/nanumsquareotfb"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_end_date_asset_coloring_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/register_asset_coloring_bar"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/register_end_date_naver_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_end_date_asset_coloring_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/register_end_date_aaset_naver" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanumsquareotfb"
            android:text="네이버 전역일 계산기"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>